## $Id: Makefile,v 1.1.1.1 2004-09-13 15:11:05 tellini Exp $
##
##  Makefile -- Build procedure for sample mod_tunnel Apache module
##  Autogenerated via ``apxs -n tunnel -g''.
##

#   the used tools
APXS=apxs
APACHECTL=apachectl

#   the default target
all: mod_tunnel.so

#   compile the DSO file
mod_tunnel.so: mod_tunnel.c
	$(APXS) -c $(DEF) $(INC) $(LIB) mod_tunnel.c

#   install the DSO file into the Apache installation
#   and activate it in the Apache configuration
install: all
	$(APXS) -i -a -n 'tunnel' mod_tunnel.so

#   cleanup
clean:
	-rm -f *.o *.so *.bak

#   reload the module by installing and restarting Apache
reload: install restart

#   the general Apache start/restart/stop procedures
start:
	$(APACHECTL) startssl
restart:
	$(APACHECTL) restart
stop:
	$(APACHECTL) stop

# my quick debug stuff
test: install stop start
	apachectl status
	tail /usr/local/apache/logs/error_log
